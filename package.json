{
  "name": "turnish-plugin-gfm",
  "description": "Turnish plugin to add GitHub Flavored Markdown extensions.",
  "publishConfig": {
    "access": "public"
  },
  "version": "1.0.1",
  "author": "Manabu Nakazawa",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepare": "pnpm run build",
    "changeset": "changeset",
    "release": "pnpm build && changeset publish"
  },
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "browser": "./dist/index.umd.js",
      "node": "./dist/index.cjs",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "default": "./dist/index.mjs"
    },
    "./package.json": "./package.json"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@types/node": "^25.0.3",
    "turnish": "^1.6.2",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.16"
  },
  "peerDependencies": {
    "turnish": "1.x"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "turnish",
    "turndown",
    "turndown-plugin",
    "html-to-markdown",
    "html",
    "markdown",
    "github-flavored-markdown",
    "gfm"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mshibanami/turnish-plugin-gfm.git"
  }
}
